<% layout('layout/boilerplate') %>
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.css" />
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.css" />
    <link rel="stylesheet" href="/css/index.min.css">
  
    <div class="buyandsell container">
        <h1 class="text-buyandsell">What is your plan 
            <i class="fa fa-question" aria-hidden="true"></i>
        </h1>
        <div class="btn-buysell">
            <div class="main">
                <a href="#alldog">Buy</a>
              </div>
              <div class="main">
                <a href="/dogs/new">Sell</a>
              </div>
        </div>
    </div>
    <div class="carousel postition-relative">
        <div class="quote-dog position-absolute top-50 start-50 translate-middle">
            <p>
              <strong>Blessed </strong>is the person who has earned the love of an old dog!
            </p>
        </div>
    </div>
    <h2 class="text-center waitting-text">They are waitting for you!</h2>
    <div id="carousel-slider">
        <% for (let dog of dogs) { %>
            <div class="random-img">
                <img src="<%=dog.images[0].thumbnail%>"  alt="" style="width:100%;height:100%;">
            </div>
            <% } %>
    </div>
    <h1 class="text-center text-all" id="alldog">All Dogs</h1>
    <div class="row mx-auto row-cols-1 row-cols-md-3 g-4">
        <% for (let dog of dogs) {%>
            <div class="col">
                <a href="/dogs/<%=dog._id%>" class="wrap-card">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-12 product-image">
                                <img src="<%=dog.images[0].thumbnail%>" alt="">
                            </div>
                            <div class="col-md-12 product-infor">
                                <div class="card-body">
                                    <h5 class="card-title">Name: <%=dog.name%>
                                    </h5>
                                    <p class="card-text text-muted text-location">Location: <%=dog.location%>
                                    </p>
                                    <p class="card-text text-discrip">Description: <%=dog.description%>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="mx-auto gap-2 mb-3 product-btn">
                            <a href="/dogs/<%=dog._id%>" class="btn btn-success prd-btn">View More</a>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
    <!-- Calling jQuery -->
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <!-- Calling Slick Library -->
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="/javascripts/slider.js"></script>